{
  "compilerOptions": {
      "rootDir": "./",
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./dist/",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "typeRoots": [
          "./node_modules/@types"
      ],
      "types": [
          "node", "jest"
      ]
  }
}